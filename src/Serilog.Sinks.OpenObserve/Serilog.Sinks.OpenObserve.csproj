<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AssemblyVersion>1.0.4</AssemblyVersion>
        <PackageVersion>1.0.4</PackageVersion>
        <AssemblyName>Serilog.Sinks.OpenObserve-KKP</AssemblyName>
        <Authors>Serilog Contributors; Konrad Kami≈Ñski - Pawlak</Authors>
        <PackageId>Serilog.Sinks.OpenObserve-KKP</PackageId>
        <RootNamespace>Serilog</RootNamespace>
        <PackageTags>serilog;openobserve</PackageTags>
        <PackageProjectUrl>https://github.com/konradkaminski/serilog-sinks-openobserve-kkp</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryType>git</RepositoryType>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <LangVersion>12</LangVersion>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageIcon>serilog-sink-nuget.png</PackageIcon>
        <Description>A Serilog sink that writes events to Openobserve using JSON and HTTP/HTTPS.</Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Serilog" Version="4.0.0"/>
        <PackageReference Include="Serilog.Expressions" Version="5.0.0"/>
        <PackageReference Include="Serilog.Sinks.PeriodicBatching" Version="5.0.0"/>
        <PackageReference Include="System.Text.Json" Version="8.0.3"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" Visible="false" PackagePath="\"/>
        <None Include="..\..\serilog-sink-nuget.png" Pack="true" Visible="false" PackagePath=""/>
    </ItemGroup>

</Project>
